.sixteen.wide.column
  .ui.form.error
    = form_for @account do |f|
      - if @account.errors.any?
        #error_explanation
          %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
          %ul
            - @account.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label :first_name
        = f.text_field :first_name

      .field
        = f.label :last_name
        = f.text_field :last_name

      .field
        = f.label :adress
        = f.text_field :adress

      .field
        = f.label :phone
        = f.text_field :phone

      .field
        = f.label :website
        = f.text_field :website

      .field
        = f.label :image
        = f.file_field :image

      .actions
        = f.submit 'Update Profile', class: 'ui button positive'
